{
  "name": "archlens-strategic-systems",
  "version": "3.0.0",
  "private": true,
  "description": "High-security AI-driven codebase orchestration platform â€” Turborepo monorepo",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@archlens/web",
    "dev:storybook": "turbo run storybook:dev --filter=@archlens/ui",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "analyze": "turbo run analyze --filter=@archlens/web",
    "storybook:build": "turbo run storybook:build",
    "chromatic": "turbo run chromatic --filter=@archlens/ui",
    "clean": "turbo run clean && rm -rf node_modules",
    "server:dev": "turbo run dev --filter=@archlens/gateway",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md}": ["prettier --write"]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
